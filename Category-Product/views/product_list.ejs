<%- include('layouts/header')%>

<div class="container">
  <div class="row my-4">
    <div class="col-lg-12">
      <% if (message){%>
      <div
        class="alert alert-dismissible fade show alert-<%= message.type %>"
        role="alert"
      >
        <button
          class="btn-close"
          type="button"
          data-bs-dismiss="alert"
          aria-label="Close"
        ></button>
        <strong><%= message.message %></strong>
      </div>
      <% } %>
      <div class="table-responsive">
        <% if (products != " "){ %>

        <table class="table table-striped text-center my-3">
          <thead>
            <tr class="table-dark">
              <th>Product Id</th>
              <th>Product Name</th>
              <th>Category Name</th>
              <th>Category Id</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% products.forEach((row,index) =>{ %>
            <tr class="align-middle">
              <td><%= row.productId %></td>
              <td><%= row.productName%></td>
              <td><%= categoryName %></td>
              <td><%= row.CategoryId%></td>
              <td>
                <a href="/product/edit/<%=row._id%>" class="text-success"
                  ><i class="fas fa-edit fa-lg mx-1"></i
                ></a>

                <a href="/product/delete/<%=row._id%>" class="text-danger"
                  ><i class="fas fa-trash fa-lg mx-1"></i
                ></a>
              </td>
            </tr>
            <%}) %>
          </tbody>
        </table>
        <% } else {%>
        <h1 class="text-center text-secondary mt-5">
          No Product found in database
        </h1>
        <% } %>
      </div>
    </div>
  </div>
</div>
<%- include('layouts/footer')%>
